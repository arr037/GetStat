<UserControl x:Class="GetStat.Controls.TimeControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GetStat.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Name="root">
    <Grid Width="Auto" Height="Auto" >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <ComboBox Name="hour" Grid.Column="0" 
                  Text="{Binding ElementName=root,Path=HourText,UpdateSourceTrigger=PropertyChanged}" 
                  IsEditable="True" IsTextSearchEnabled="True"/>
            <TextBlock Grid.Column="1" Text=":"/>
        <ComboBox Name="min" Grid.Column="2" 
                  Text="{Binding ElementName=root,Path=MinutText,UpdateSourceTrigger=PropertyChanged}" 
                   IsEditable="True" IsTextSearchEnabled="True"/>
    </Grid>
</UserControl>
